{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cargo: fmt",
      "type": "shell",
      "command": "cargo fmt --all"
    },
    {
      "label": "cargo: clippy",
      "type": "shell",
      "command": "cargo clippy --all-targets --all-features -- -D warnings",
      "problemMatcher": [
        "$rustc"
      ]
    },
    {
      "label": "cargo: build",
      "type": "shell",
      "command": "cargo build --workspace",
      "problemMatcher": [
        "$rustc"
      ]
    },
    {
      "label": "cargo: test",
      "type": "shell",
      "command": "cargo test --workspace -- --nocapture",
      "problemMatcher": [
        "$rustc"
      ]
    },
    {
      "label": "hauski: run core (expose) & curl configs",
      "type": "shell",
      "command": "HAUSKI_EXPOSE_CONFIG=true RUST_LOG=info cargo run -p hauski-core & sleep 1 && curl -s http://127.0.0.1:8080/config/limits && echo && curl -s http://127.0.0.1:8080/config/models && echo"
    }
  ]
}