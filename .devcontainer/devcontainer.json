{
  "name": "hauski-dev",
  "build": { "dockerfile": "Dockerfile", "context": ".." },
  "hostRequirements": { "gpu": "optional" },

  "remoteUser": "vscode",

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": { "username": "vscode", "installZsh": false },
    "ghcr.io/devcontainers/features/node:1": { "version": "20" },
    "ghcr.io/devcontainers/features/python:1": { "version": "3.11" },
    "ghcr.io/devcontainers/features/rust:1": {},
    "ghcr.io/devcontainers/features/nvidia-cuda:1": { "installCuda": false }
  },

  "postCreateCommand": "bash -lc 'if [ -f /home/vscode/.cargo/env ]; then source /home/vscode/.cargo/env; fi; sudo apt update && sudo apt install -y direnv && echo \"eval \\\"$(direnv hook bash)\\\"\" >> /home/vscode/.bashrc && chown vscode:vscode /home/vscode/.bashrc; /workspaces/hauski/scripts/bootstrap.sh'",

  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers",
        "eamodio.gitlens",
        "usernamehw.errorlens",
        "yzhang.markdown-all-in-one",
        "bierner.markdown-mermaid",
        "mkhl.direnv"
      ]
    }
  },

  "mounts": [
    "source=hauski-cargo,target=/home/vscode/.cargo,type=volume",
    "source=hauski-rustup,target=/home/vscode/.rustup,type=volume"
  ]
}
