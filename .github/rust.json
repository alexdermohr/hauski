{
  "problemMatcher": [
    {
      "owner": "rustc",
      "pattern": [
        {
          "regexp": "^(error|warning|note|help)(\\[(E\\d{4}|[\\w\\-]+)\\])?:\\s+(.*)$",
          "severity": "1",
          "code": 3,
          "message": 4
        },
        {
          "regexp": "^\\s*-->\\s+([^:]+):(\\d+):(\\d+)$",
          "file": 1,
          "line": 2,
          "column": 3
        },
        { "regexp": "^\\s*\\|$", "comment": "Matches and ignores empty context lines in Rust error output." },
        {
          "regexp": "^\\s*[|].*$",
          "loop": true
        }
      ]
    },
    {
      "owner": "rustc-warning",
      "pattern": [
        {
          "regexp": "^(warning)(\\[[^\\]]+\\])?:\\s+(.*)$",
          "message": 3,
          "severity": 2
        },
        {
          "regexp": "^\\s*-->\\s+([^:]+):(\\d+):(\\d+)$",
          "file": 1,
          "line": 2,
          "column": 3
        },
        {
          "regexp": "^\\s*[|].*$",
          "loop": true,
          "message": 3
        }
      ]
    }
  ]
}
